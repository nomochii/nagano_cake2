<h1>商品新規登録</h1>

<%= form_with model: @item do |f| %>
  <h4>画像</h4>
  <%= f.file_field :image, accept: "image/*" %>
  <h4>商品名</h4>
  <%= f.text_field :product_name %>
  <h4>商品説明</h4>
  <%= f.text_area :introduction %>
  <h4>税抜価格</h4>
  <h4><%= f.text_area :price %>円</h4>
  <%= f.submit '新規登録' %>
<% end %>