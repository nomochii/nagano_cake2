<header>
  <li>
    <%= link_to "商品一覧", admin_items_path %>
  </li>
  <li>
    <%= link_to "会員一覧", admin_customers_path %>
  </li>
  <li>
    <%= link_to "注文履歴一覧", admin_path %>
  </li>
  <li>
    <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
  </li>
</header>

<h1>管理者商品一覧</h1>

  <table>
    <thead>
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
      </tr>
    </thead>

    <tbody>
      <% @items.each do |item| %>
        <tr>
         <td><%= item.id %></td>
          <td>
            <%= link_to item.product_name, admin_item_path(item.id) %>
          </td>
          <td><%= item.price %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<%= paginate @items %>