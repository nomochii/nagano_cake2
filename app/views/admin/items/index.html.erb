<h1>管理者商品一覧</h1>
<%= link_to new_admin_item_path, class: "btn btn-danger text-white", method: :get do %>
  <i class="fa-solid fa-plus"></i>
<% end %>
  <table>
    <thead>
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
      </tr>
    </thead>

    <tbody>
      <% @items.each do |item| %>
        <tr>
         <td><%= item.id %></td>
          <td>
            <%= link_to item.product_name, admin_item_path(item.id) %>
          </td>
          <td><%= item.price %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<%= paginate @items %>