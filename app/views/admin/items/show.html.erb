  <li>
    <%= link_to "商品一覧", admin_items_path %>
  </li>
  <li>
    <%= link_to "会員一覧", customers_path %>
  </li>
  <li>
    <%= link_to "注文履歴一覧", admin_path %>
  </li>
  <li>
    <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
  </li>
</header>

<h1>商品詳細</h1>
<table class="teble">
  <tbody>
    <div>
      <% if @item.image.attached? %>
        <%= image_tag @item.image, size: "300x300" %>
      <% else %>
        <%= image_tag 'no_image', size: "300x300" %>
      <% end %>
    </div>
    <div><p>商品名</p></div>
    <div><%= @item.product_name %></div>
    <div><p>商品説明</p></div>
    <div><%= @item.introduction %></div>
    <div><p>税抜価格</p></div>
    <div><%= @item.price %></div>
    <div><p>税込価格</p></div>
    <div><%= @item.add_tax_included_price.to_s(:dalimited) %></div>
    <div>
      <%= link_to "編集する", edit_admin_item_path(@item.id) %>
      <% end %>
    </div>
  </tbody>
</table>
