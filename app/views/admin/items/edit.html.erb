<h1>商品編集</h1>
<%= form_with model: @item, url: admin_item_path(@item.id), method: :patch do |f| %>
<h4>商品画像</h4>
  <div>
    <% if @item.image.attached? %>
      <%= image_tag @item.image, size: "300x300" %>
    <% else %>
      <%= image_tag 'no_image', size: "300x300" %>
    <% end %>
  </div>

  <h4>商品名</h4>
  <%= f.text_field :product_name %>

  <h4>商品説明</h4>
  <%= f.text_area :introduction %>

  <h4>税抜価格</h4>
  <%= f.text_area :price %>


  <%= f.submit '変更を保存' %>
<% end %>