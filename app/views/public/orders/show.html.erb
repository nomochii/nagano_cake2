<header>
  <li>
    <%= link_to 'マイページ', customers_my_page_path  %>
  </li>
  <li>
    <%= link_to "商品一覧", items_path %>
  </li>
  <li>
    <%= link_to "カート", cart_items_path %>
  </li>
  <li>
    <%= link_to "ログアウト", destroy_customer_session_path, method: :delete %>
  </li>
  <h4>ようこそ、<%= current_customer.first_name %>さん！</h4>
</header>

<h1>注文履歴詳細</h1>

<table>
  <h2>注文情報</h2>
  <tbody>
    <tr>
      <th>注文日</th>
      　<td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
      <th>配送先</th>
      　<td>
          　<p>〒<%= @order.shipping_postal_code %></p>
          　<div><%= @order.shipping_address %></div>
          　<div><%= @order.shipping_name %></div>
      　<th>支払方法</th>
      　  <td><%= @order.payment_method %></td>
    </tr>
  </tbody>

  <tbody>
    <h2>請求情報</h2>
    <tr>
      <th>商品合計</th>
      　<td><%=  @order.total_amount - @order.postage %></td>
      <th>配送料</th>
      　<td><%= @order.postage %><td/>
      <th>ご請求額</th>
      　  <td><%= @order.total_amount.to_s(:dalimited) %>></td>
    </tr>
  </tbody>

  <thead>
    <tr>
      <th>商品</th>
      <th>単価(税込)</th>
      <th>個数</th>
      <th>小計</th>
    </tr>
  </thead>

  <tbody>
    <h2>注文内容</h2>
    <% @order.order_details.each do |order_detail| %>
    <tr>
      <td><%= order_detail.item.product_name %></td>
      <td><%= order_detail.purchase_price %></td>
      <td><%= order_detail.amount %><td/>
      <td><%= order_detail.subtotal%></td>
    </tr>
    <% end %>
  </tbody>
</table>