<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :first_name, "(姓)" %>
    <%= f.text_field :first_name, autofocus: true, required: true, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :last_name, "(名)" %>
    <%= f.text_field :last_name, autofocus: true, required: true, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :first_name_kana, "(セイ)" %>
    <%= f.text_field :first_name_kana, autofocus: true, required: true, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :last_name_kana, "(メイ)" %>
    <%= f.text_field :last_name_kana, autofocus: true, required: true, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :email, "メールアドレス" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
    <%= f.text_field :postal_code, autofocus: true, required: true, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :address, "住所" %>
    <%= f.text_field :address, autofocus: true, required: true, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :telephone_number, "電話番号(ハイフンなし)" %>
    <%= f.text_field :telephone_number, autofocus: true, required: true, class: 'form-control' %>
  </div>




  <div class="field">
    <%= f.label :password, "パスワード(6文字以上)"%>
    <%= @minimum_password_length %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワード(確認用)"%>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新期登録" %>
  </div>
<% end %>

<%= render "public/shared/links" %>
